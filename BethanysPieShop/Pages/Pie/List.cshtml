@using Microsoft.EntityFrameworkCore.Infrastructure
@model System.Collections.Generic.IEnumerable<BethanysPieShop.Models.Pie>

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
<div>
      @foreach (var pie in Model.AllPies)
      {
          <div>
              <h2>@pie.Name</h2>
              <h3>@pie.Price.ToString("c")</h3>
              <h4>@pie.Category.CategoryName</h4>
          </div>
      }
</div>
</body>
</html>