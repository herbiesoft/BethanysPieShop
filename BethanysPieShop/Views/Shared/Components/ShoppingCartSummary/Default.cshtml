@model BethanysPieShop.ViewModels.ShoppingCartViewModel

@if (Model.ShoppingCart.ShoppingCartItems.Count > 0)
{
    <li>
        <a>
            <span class="glyphicon glyphicon-shopping-cart"></span>
            <span id="cart-status">
                @Model.ShoppingCart.GetShoppingCartItems().Count
            </span>
        </a>
    </li>
}
